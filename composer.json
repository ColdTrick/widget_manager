{
	"name": "coldtrick/widget_manager",
	"description": "Manage your widgets",
	"type": "elgg-plugin",
	"keywords": ["elgg", "plugin", "widgets"],
	"license": "GPL-2.0-only",
	"support": {
		"source": "https://github.com/ColdTrick/widget_manager",
		"issues": "https://github.com/ColdTrick/widget_manager/issues"
	},
	"repositories": [
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ],
    "config": {
        "fxp-asset": {
            "enabled": false
        }
    },
	"require": {
		"composer/installers": "^1.0.8",
		"mobiledetect/mobiledetectlib": "~2.8.0",
		"npm-asset/muuri": "~0.9.3"
	},
	"require-dev": {
		"coldtrick/sniffs": "dev-master",
		"coldtrick/releases": "dev-master"
	},
	"conflict": {
		"elgg/elgg": "<3.3"
	}
}
